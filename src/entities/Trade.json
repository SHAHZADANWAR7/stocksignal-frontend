{
  "name": "Trade",
  "type": "object",
  "properties": {
    "userId": {
      "type": "string",
      "description": "Reference to the user who placed the trade"
    },
    "symbol": {
      "type": "string",
      "description": "Stock or ETF ticker symbol"
    },
    "quantity": {
      "type": "number",
      "minimum": 1e-06,
      "description": "Number of shares to trade"
    },
    "orderType": {
      "type": "string",
      "enum": [
        "market",
        "limit"
      ],
      "default": "market",
      "description": "Type of order (market or limit)"
    },
    "side": {
      "type": "string",
      "enum": [
        "buy",
        "sell"
      ],
      "description": "Trade side (buy or sell)"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "filled",
        "rejected",
        "cancelled"
      ],
      "default": "pending",
      "description": "Current status of the trade"
    },
    "limitPrice": {
      "type": "number",
      "minimum": 0,
      "description": "Limit price for limit orders"
    },
    "executedPrice": {
      "type": "number",
      "minimum": 0,
      "description": "Actual price at which trade was executed"
    },
    "executedQuantity": {
      "type": "number",
      "minimum": 0,
      "description": "Actual quantity executed (for partial fills)"
    },
    "drivewealth_order_id": {
      "type": "string",
      "description": "Order ID returned by DriveWealth API"
    },
    "fees": {
      "type": "number",
      "default": 0,
      "description": "Trading fees and commissions"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the trade was placed"
    },
    "filled_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the trade was filled"
    },
    "rejection_reason": {
      "type": "string",
      "description": "Reason for rejection if status is rejected"
    },
    "paper_trade": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is a simulated paper trade"
    }
  },
  "required": [
    "userId",
    "symbol",
    "quantity",
    "side"
  ]
}
